<div class="mdl-grid">
  <section id="entries" class="mdl-cell mdl-cell--7-col relative">
    <div class="mdl-grid">
      {{#each entries}}
      <div class="mdl-cell mdl-cell--6-col mdl-card mdl-shadow--2dp">
        <div class="mdl-card__title">
          <h2 class="mdl-card__title-text">Entry #{{id}}</h2>
        </div>
        <div class="mdl-card__supporting-text">
          <table class="entry-details">
            <tr><th>Date</th><td>{{date}}</td></tr>
            <tr><th>Hours</th><td>{{hours}}</td></tr>
            <tr><th>Description</th><td>{{description}}</td></tr>
            <tr><th>Rate (USD per hour)</th><td>{{rate}}</td></tr>
            <tr><th>Status</th><td>{{status}}</td></tr>
          </table>
        </div>
        <div class="mdl-card__actions">
          <a class="mdl-button mdl-button--colored mdl-js-button
                    mdl-js-ripple-effect"
             href="/edit/{{id}}">Edit</a>
          <a class="mdl-button mdl-js-button mdl-js-ripple-effect"
             href="/delete/{{id}}">Delete</a>
        </div>
      </div>
      {{/each}}
       <a class="mdl-button mdl-js-button mdl-button--fab mdl-js-ripple-effect
                 mdl-button--colored mdl-shadow--4dp mdl-color--accent"
          href="/create">
        <i class="material-icons" role="presentation">add</i>
        <span class="visuallyhidden">Add</span>
      </a>
    </div>
  </section>

  <!-- Show spreadsheets -->
  <section id="spreadsheets"
           class="mdl-cell mdl-cell--3-col relative">
    <div class="mdl-list">
      <div class="mdl-list__item">
        <span class="mdl-list__item-primary-content mdl-layout-title">
          Spreadsheets</span>
        <span class="mdl-list__item-secondary-action">
          <button class="mdl-button mdl-js-button mdl-button--raised
                         mdl-js-ripple-effect mdl-button--colored"
                  rel="create" type="button">Create</button>
        </span>
      </div>
      {{#each spreadsheets}}
      <div class="mdl-list__item">
        <a class="mdl-list__item-primary-content"
           href="https://docs.google.com/spreadsheets/d/{{id}}/edit"
           target="_blank">{{name}}</a>
        <span class="mdl-list__item-secondary-action">
          <button class="mdl-button mdl-js-button mdl-button--raised
                         mdl-js-ripple-effect"
                  rel="sync" data-spreadsheetid="{{id}}"
                  type="button">Sync</button>
        </span>
      </div>
      {{/each}}
    </div>
  </section>

  <!-- Show timer -->
  <section id="timer"
            class="mdl-cell mdl-cell--2-col relative">
    <div class="mdl-list">
      <div class="mdl-list__item">
        <span class="mdl-list__item-primary-content mdl-layout-title">Timer</span>
        <span class="mdl-list__item-secondary-action">
          <button class="mdl-button mdl-js-button mdl-button--raised
                         mdl-js-ripple-effect mdl-button--colored"
                  rel="startTimer" type="button">Clock In</button>
        </span>
      </div>
      {{#each timer}}
      <div class="mdl-list__item">
        <a class="mdl-list__item-primary-content"
           href="https://docs.google.com/spreadsheets/d/{{id}}/edit"
           target="_blank">{{name}}</a>
        <span class="mdl-list__item-sefcondary-action">
          <button class="mdl-button mdl-js-button mdl-button--raised
                         mdl-js-ripple-effect"
                  rel="sync" data-spreadsheetid="{{id}}"
                  type="button">Clock Out</button>
        </span>
      </div>
      {{/each}}
    </div>
  </section>
</div>
